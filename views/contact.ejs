<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('partials/head') %>
    
  </head>
  <body>
    <%- include('partials/navigation.ejs') %>
    <div class="container vh-100 d-flex justify-content-center align-items-center">
      <div class="card bg-dark text-center text-white">
        <div class="card-header">
          <h3>Contacta con nosotros</h3>
        </div>
        <div class="card-body text-start">
          <form method="post" action="/recoger">

            <div class="mb-3">
              <label for="email">Email de contacto</label>
              <input type="email" placeholder="Email" name="email" class="form-control">
            </div>

            <div class="mb-3">
              <label for="message">Mensaje:</label>
              <textarea class="form-control" rows="3" name="message" placeholder="Introduce el texto."></textarea>
            </div>
            <input type="submit" class="btn btn-primary col-12"></input>
          </form>
        </div>

      </div>

    </div>
  </body>
</html>
